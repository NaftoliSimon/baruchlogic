{
    "extends": [
      "google",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier",
      "prettier/react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": ["react", "jsx-a11y", "prettier", "react-hooks"],
    "rules": {
      "prettier/prettier": 2,
      "max-len": [2, 80, {
        "ignoreComments": false,
        "ignoreTrailingComments": false
      }],
      "no-invalid-this": 0,
      "require-jsdoc": 0,
      "react-hooks/rules-of-hooks": 2,
      "react-hooks/exhaustive-deps": 0
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}
